{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "birthname": {
      "type": "string"
    },
    "birthdate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "birthplace": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "birthdate",
    "birthplace"
  ]
}
